                                {% if svg != blank %}
                                <span class="[&_svg]:w-[24px] [&_svg]:h-[24px] md:[&_svg]:w-[32px] md:[&_svg]:h-[32px] [&_svg]:flex-none [&_svg]:shrink-0" aria-hidden="true">
                                    {{ svg }}
                                </span>
                                {% elsif ic != blank %}
