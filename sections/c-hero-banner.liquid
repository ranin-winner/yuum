    {
      "type": "range",
      "label": "Padding Mobile",
      "id": "padding_mobile",
      "default": 20,
      "min": 12,
      "max": 100,
      "unit": "px"
    },
    {
      "type": "text",
      "label": "Banner Text Width",
      "id": "banner_text_width",
      "default": "300"
    },
    {
      "type": "text",
      "label": "Banner Height (Desktop)",
      "id": "banner_height_desktop",
      "default": "568"
    },
    {
      "type": "text",
      "label": "Banner Height (Mobile)",
      "id": "banner_height_mobile",
      "default": "300"
    }
  ],
  "presets": [
      {
        "name": "Hero Banner",
        "category": "Custom"
      }
    ]
}
