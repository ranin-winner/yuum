<script>
document.addEventListener('alpine:init', () => {
  Alpine.data('toastBackToBuy', (targetSelector, opts = {}) => ({
    visible: false,
    threshold: 300,
    io: null,
    headerOffset: 0,
    ro: null,
    showOnDesktop: opts.showOnDesktop !== false, // за замовчуванням true

    init() {
      const target = document.querySelector(targetSelector)
      if (!target) return

      const selHeader = '#id_header, .m-sticky, header, .site-header'
      const selAnnounce = '[data-announcement-bar], .announcement-bar'

      const getTotalHeight = (selector) => {
        let total = 0
        document.querySelectorAll(selector).forEach(el => {
          if (!el) return
          const style = getComputedStyle(el)
          if (style.display === 'none' || style.visibility === 'hidden') return
          total += el.getBoundingClientRect().height
        })
        return total
      }

      const computeOffset = () => {
        const extra = 12
        this.headerOffset =
          (opts.offsetPx ?? 0) + getTotalHeight(selHeader) + getTotalHeight(selAnnounce) + extra
      }

      computeOffset()
      this.ro = new ResizeObserver(() => computeOffset())
      document.querySelectorAll(selHeader + ',' + selAnnounce).forEach(el => this.ro.observe(el))
      window.addEventListener('resize', computeOffset)

      const makeObserver = () => {
        if (this.io) this.io.disconnect()
        this.io = new IntersectionObserver((entries) => {
          const e = entries[0]
          const away = !e.isIntersecting
          this.updateVisibility(away)
        }, { rootMargin: `-${this.headerOffset}px 0px -40% 0px`, threshold: [0, 1] })
        this.io.observe(target)
      }
      makeObserver()
      setTimeout(makeObserver, 0)

      this.onScroll = () => { if (window.scrollY < this.threshold) this.visible = false }
      window.addEventListener('scroll', this.onScroll, { passive: true })
    },

    updateVisibility(away) {
      // було: this.visible = away && window.innerWidth < 768 && window.scrollY > this.threshold
      const widthOk = this.showOnDesktop || window.innerWidth < 768
      this.visible = away && widthOk && window.scrollY > this.threshold
    },

    scrollToBuy() {
      const target = document.querySelector(targetSelector)
      if (!target) return
      const top = target.getBoundingClientRect().top + window.pageYOffset - this.headerOffset
      window.scrollTo({ top, behavior: 'smooth' })
    },

    destroy() {
      if (this.io) this.io.disconnect()
      if (this.ro) this.ro.disconnect()
      window.removeEventListener('resize', this.computeOffset)
      window.removeEventListener('scroll', this.onScroll)
    }
  }))
})
</script>
<script>
    // smooth-anchors.js
    document.addEventListener('click', (e) => {
    const link = e.target.closest('.bundle_nav a[href^="#"]');
    if (!link) return;

    const hash = link.getAttribute('href');
    const id = decodeURIComponent(hash.slice(1));
    const target = document.getElementById(id);
    if (!target) return;

    e.preventDefault();

    // висота стікі-хедера, якщо задаєш десь раніше: :root { --sticky-offset: 140px; }
    const root = document.documentElement;
    const varVal = getComputedStyle(root).getPropertyValue('--sticky-offset').trim();
    const offset = parseInt(varVal, 10) || 0;

    const top = target.getBoundingClientRect().top + window.scrollY - offset;

    window.scrollTo({ top, behavior: 'smooth' });
    // оновлюємо хеш без миттєвого стрибка
    history.replaceState(null, '', `#${id}`);
    });
</script>




