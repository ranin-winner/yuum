<section class="about-us-universal section-{{ section.settings.section_type }}">
  <div class="container">

    <!-- TYPE 1: Hero with Image & Text -->
    {% if section.settings.section_type == 'hero' %}
      <div class="hero-grid">
        <div class="hero-image">
          {% if section.settings.image != blank %}
            {% render 'image' with section.settings.image %}
          {% endif %}
        </div>
        <div class="hero-content">
          {% if section.settings.kicker != blank %}
            <div class="kicker">{{ section.settings.kicker }}</div>
          {% endif %}
          <h1 class="hero-title">{{ section.settings.title }}</h1>
          <div class="hero-text">{{ section.settings.text }}</div>
          {% if section.settings.button_label != blank %}
            <a href="{{ section.settings.button_link }}" class="btn-primary">
              {{ section.settings.button_label }}
            </a>
          {% endif %}
        </div>
      </div>

      <!-- TYPE 2: Flavours Grid -->
    {% elsif section.settings.section_type == 'flavours' %}
      <div class="flavours-section">
        <h2 class="section-title">{{ section.settings.title }}</h2>
        <div class="flavours-grid">
          {% for i in (1..5) %}
            {% assign flavour_key = 'flavour_' | append: i %}
            {% assign flavour_text = section.settings[flavour_key] %}
            {% if flavour_text != blank %}
              <div class="flavour-item">{{ flavour_text }}</div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="flavours-description">{{ section.settings.description }}</div>
      </div>

      <!-- TYPE 3: Gluten Free Banner -->
    {% elsif section.settings.section_type == 'gluten_banner' %}
      <div class="gluten-banner">
        <div class="gluten-scroll-text">{{ section.settings.scroll_text }}</div>
        <div class="gluten-description">{{ section.settings.description }}</div>
      </div>

      <!-- TYPE 4: Seasonality Blocks -->
    {% elsif section.settings.section_type == 'seasonality' %}
      <div class="seasonality-section">
        <h2 class="section-title">{{ section.settings.title }}</h2>
        <div class="seasons-grid">
          {% for i in (1..4) %}
            {% assign season_key = 'season_' | append: i %}
            {% assign season_text = section.settings[season_key] %}
            {% if season_text != blank %}
              <div class="season-item">{{ season_text }}</div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="seasonality-description">{{ section.settings.description }}</div>
      </div>

    {% endif %}
  </div>
</section>

<style>
  .hero-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 60px; align-items: center; }
  .flavours-grid { display: grid; grid-template-columns: repeat(5, 1fr); gap: 20px; margin: 40px 0; }
  .seasons-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 30px; margin: 40px 0; }
  .gluten-scroll-text { font-size: 24px; font-weight: bold; text-align: center; margin-bottom: 20px; }
</style>

