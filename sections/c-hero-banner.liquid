      "min": 12,
      "max": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "label": "Subtitle Font Size Mobile",
      "id": "subtitle_font_size_mobile",
      "default": 16,
      "min": 12,
      "max": 40,
      "unit": "px"
    },
    {
      "type": "color",
      "label": "Text Color",
      "id": "text_color",
      "default": "#000000"
    },
    {
      "type": "range",
      "label": "Padding DeskTop",
      "id": "padding_desktop",
