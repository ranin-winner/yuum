{%- comment -%}
  locations-card.liquid
  Параметри:
    image, title, subtitle, address, city, hours, phone, badge,
    link_page, link_url, link_label
  Весь сніпет — це посилання на сторінку локації
{%- endcomment -%}

{%- assign href = link_page.url | default: link_url | default: '#' -%}
<a href="{{ href }}"
   class="locations-card group block overflow-hidden transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black">
  <div class="locations-card__photo-inner relative rounded-[20px] bg-neutral-100 overflow-hidden">
    {%- if image != blank -%}
      {%- assign img = image -%}
      <img
        class="w-full h-full object-cover group-hover:scale-[1.03] transition-transform duration-300"
        src="{{ img | image_url: width: 900 }}"
        srcset="
          {{ img | image_url: width: 480 }} 480w,
          {{ img | image_url: width: 720 }} 720w,
          {{ img | image_url: width: 900 }} 900w,
          {{ img | image_url: width: 1200 }} 1200w
        "
        sizes="(min-width: 1024px) 25vw, 90vw"
        alt="{{ title | escape }}"
        loading="lazy">
    {%- else -%}
      <div class="w-full h-full grid place-items-center text-sm text-neutral-500">No image</div>
    {%- endif -%}

    {%- if badge != blank -%}
        {%- assign badges = badge | split: ',' -%}
        <div class="absolute left-[16px] top-[16px] flex flex-wrap gap-[8px]">
          {%- for b in badges -%}
            {%- assign b_clean = b | strip -%}
            {%- if b_clean != blank -%}
              <span class="badge">
                {{ b_clean }}
              </span>
            {%- endif -%}
          {%- endfor -%}
        </div>
    {%- endif -%}
  </div>

  <div class="p-4 md:p-5">
    {%- if title != blank -%}
      <h6 class="heading-6 mb-[16px] pt-[16px] border-t-[1px] border-[#474747]">{{ title }}</h6>
    {%- endif -%}
    {%- if subtitle != blank -%}
      <div class="text-[14px] tracking-[4px] uppercase mb-[24px]">{{ subtitle }}</div>
    {%- endif -%}

    <div class="flex flex-wrap flex-col md:flex-row md:gap-[40px] gap-[8px] border-t-[1px] border-[#ADAEB0] pt-[17px] mb-[24px]">
      {%- if hours != blank -%}
        <div class="flex items-start gap-2">
          <span class="shrink-0 mr-[5px] text-[#ADAEB0]">Hours |</span>
          <span>{{ hours }}</span>
        </div>
      {%- endif -%}
      {%- if phone != blank -%}
        <div class="flex items-start gap-2">
          <span class="shrink-0 mr-[5px] text-[#ADAEB0]">Contact |</span>
          <a href="{{ phone }}">{{ phone }}</a>
        </div>
      {%- endif -%}
    </div>

    {%- if href != '#' and link_label != blank -%}
      <div class="text-[14px] tracking-[4px] uppercase underline underline-offset-2 group-hover:no-underline">
        {{ link_label }}
      </div>
    {%- endif -%}
  </div>
</a>
