<div
  x-data="menuMobile"
  class="md:hidden"
  @resize.debounce.window="handleResize">
  <button
    @click="toggleMobileMenu"
    type="button"
    aria-label="Toggle mobile menu"
    :aria-expanded="isOpened">
    <svg
      class="h-10 w-10"
      width="20"
      height="16"
      viewBox="0 0 20 16"
      style="color: var(--secondary-color, --color_1);"
      xmlns="http://www.w3.org/2000/svg">
