{% render 'entry' with '@/styles/sections/search.scss' %}

{%- assign products = predictive_search.resources.products -%}

<div class="predictive-grid">
  {%- if products and products.size > 0 -%}
    {%- for product in products -%}
      {% render 'product-card-lite', product: product, show_quick_add: true, image_width: 360 %}
    {%- endfor -%}
  {%- else -%}
    <div style="grid-column:1/-1;padding:24px 0;color:#777;">No results yet. Try typing another query.</div>
  {%- endif -%}
</div>
