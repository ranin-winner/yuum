{% render 'entry' with '../styles/sections/about-universal.scss' %}

<section class="m-about-universal">
  <div class="m-container">

    <!-- Hero Section -->
    <div class="m-about-hero">
      <div class="m-about-hero__content">
        <h1 class="m-about-hero__title">{{ section.settings.hero_title }}</h1>
        <div class="m-about-hero__subtitle">
          {{ section.settings.hero_subtitle }}
        </div>
      </div>
      {% if section.settings.hero_image != blank %}
        <div class="m-about-hero__media">
          {% render 'image', image: section.settings.hero_image, class: 'm-about-hero__image' %}
        </div>
      {% endif %}
    </div>

    <!-- Flavours Section -->
    <div class="m-about-flavours">
      <h2 class="m-about-flavours__title">{{ section.settings.flavours_title }}</h2>
      <div class="m-about-flavours__intro">
        {{ section.settings.flavours_intro }}
      </div>

      <div class="m-flavours-grid">
        {% for i in (1..5) %}
          {% assign flavour_key = 'flavour_' | append: i %}
          {% assign flavour_image_key = 'flavour_image_' | append: i %}
          {% if section.settings[flavour_key] != blank %}
            <div class="m-flavour-item">
              <span class="m-flavour-name">{{ section.settings[flavour_key] }}</span>
              {% if section.settings[flavour_image_key] != blank %}
                <div class="m-flavour-image">
                   {% render 'image', image: section.settings[flavour_image_key], src_size: 'master', class: 'm-flavour-img' %}
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="m-about-flavours__guide">
        <p>{{ section.settings.flavours_guide }}</p>
      </div>
    </div>

    <!-- Sweet Section -->
    <div class="m-sweet-section">
      <h3 class="m-sweet-section-title">{{ section.settings.sweet_title }}</h3>
      <div class="m-sweet-content">
        <div class="m-sweet-words">
          {% for i in (1..9) %}
            {% assign sweet_name_key = 'sweet_name_' | append: i %}
            {% if section.settings[sweet_name_key] != blank %}
              <span class="m-sweet-word {% if forloop.first %}active{% endif %}" data-sweet="{{ section.settings[sweet_name_key] | handleize }}">
                {{ section.settings[sweet_name_key] }}
              </span>
            {% endif %}
          {% endfor %}
        </div>
        <div class="m-sweet-slider">
          <button class="m-sweet-arrow m-sweet-arrow-prev">←</button>
          <div class="m-sweet-image-container">
            {% for i in (1..9) %}
              {% assign sweet_image_key = 'sweet_image_' | append: i %}
              {% assign sweet_name_key = 'sweet_name_' | append: i %}
              {% if section.settings[sweet_image_key] != blank %}
                <div class="m-sweet-image-item {% if forloop.first %}active{% endif %}" data-sweet="{{ section.settings[sweet_name_key] | handleize }}">
                  {% render 'image', image: section.settings[sweet_image_key], src_size: 'master', class: 'm-sweet-img' %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
          <button class="m-sweet-arrow m-sweet-arrow-next">→</button>
        </div>
      </div>
      <div class="m-sweet-explore">
        <p class="m-sweet-explore-title">{{ section.settings.sweet_explore_text }}</p>
      </div>
      {% if section.settings.sweet_cta_text != blank %}
        <a href="{{ section.settings.sweet_cta_link | default: '#' }}" class="m-sweet-cta">
          {{ section.settings.sweet_cta_text }}
        </a>
      {% endif %}
    </div>

    <!-- Seasonal Section -->
    <div class="m-seasonal">
      <div class="m-seasonal-image">
        {% if section.settings.seasonal_image != blank %}
          {% render 'image', image: section.settings.seasonal_image, class: 'm-seasonal-img' %}
        {% endif %}
        <div class="m-seasonal-content">
          <h2 class="m-seasonal-title">{{ section.settings.seasonal_title }}</h2>
          <div class="m-seasonal-intro">
            <p>{{ section.settings.seasonal_intro }}</p>
          </div>
          <div class="m-seasonal-text">
            <div class="m-seasonal-seasons">
              {% for i in (1..4) %}
                {% assign season_key = 'season_' | append: i %}
                {% if section.settings[season_key] != blank %}
                  <div class="m-seasonal-season {% if forloop.first %}active{% endif %}">{{ section.settings[season_key] }}</div>
                {% endif %}
              {% endfor %}
            </div>
            <h3 class="m-seasonal-name">{{ section.settings.seasonal_name }}</h3>
          </div>
        </div>
      </div>
    </div>

    <!-- Universal Design Section -->
    <div class="m-universal-design">
      <div class="m-universal-background">
        {% if section.settings.universal_image != blank %}
          {% render 'image', image: section.settings.universal_image, class: 'm-universal-bg-image' %}
        {% endif %}
      </div>
      <div class="m-universal-content">
        <div class="m-universal-text">
          <p class="m-universal-description">{{ section.settings.universal_text }}</p>
        </div>
      </div>
    </div>

  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Sweet section slider
    const sweetWords = document.querySelectorAll('.m-sweet-word');
    const sweetImages = document.querySelectorAll('.m-sweet-image-item');
    const sweetPrev = document.querySelector('.m-sweet-arrow-prev');
    const sweetNext = document.querySelector('.m-sweet-arrow-next');
    let currentSweetIndex = 0;

    function showSweet(index) {
      // Remove active class from all words and images
      sweetWords.forEach(w => w.classList.remove('active'));
      sweetImages.forEach(img => img.classList.remove('active'));

      // Add active class to current word and image
      sweetWords[index].classList.add('active');
      sweetImages[index].classList.add('active');
      currentSweetIndex = index;
    }

    sweetWords.forEach((word, index) => {
      word.addEventListener('click', function() {
        showSweet(index);
      });
    });

    sweetPrev.addEventListener('click', function() {
      let newIndex = currentSweetIndex - 1;
      if (newIndex < 0) newIndex = sweetWords.length - 1;
      showSweet(newIndex);
    });

    sweetNext.addEventListener('click', function() {
      let newIndex = currentSweetIndex + 1;
      if (newIndex >= sweetWords.length) newIndex = 0;
      showSweet(newIndex);
    });

    // Seasonal section
    const seasonItems = document.querySelectorAll('.m-seasonal-season');

    seasonItems.forEach(item => {
      item.addEventListener('click', function() {
        seasonItems.forEach(i => i.classList.remove('active'));
        this.classList.add('active');
        // Here you can add functionality to change the seasonal content
      });
    });
  });
</script>

