{% render 'entry' with '@/styles/sections/blog-article-single.scss' %}

<section class="m-blog-article-single">
  <div class="container">
    <nav class="m-blog-article-single__breadcrumb">
      <a href="/">Home</a> | <a href="/blogs/{{ blog.handle }}">Blog</a> | <span>{{ article.title }}</span>
    </nav>
  </div>

  <div class="m-blog-article-single__gray-section">
    <div class="container">
      <div class="m-blog-article-single__main-layout">
        <div class="m-blog-article-single__content-left">
          <div class="m-blog-article-single__title-container">
            <h2 class="m-blog-article-single__title">{{ article.title }}</h2>
          </div>

          <div class="m-blog-article-single__bottom-container">
            <div class="m-blog-article-single__divider"></div>

            <div class="m-blog-article-single__meta">
              <span class="m-blog-article-single__year">{{ article.published_at | date: "%d.%m.%Y" }}</span>
              <span class="m-blog-article-single__author"><span>Author</span> | {{ article.author }}</span>
            </div>
          </div>
        </div>

        {% if article.image %}
          <div class="m-blog-article-single__hero-image">
            {% render 'image' with article.image, class: "m-blog-article-single__img-hero" %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="m-blog-article-single__white-section">
    <div class="m-blog-article-single__container">
      <section class="m-blog-article-single__full-content">
        <div class="m-blog-article-single__article-content">
          {{ article.content }}
        </div>
      </section>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Blog Article Single",
  "settings": [],
  "presets": [
    {
      "name": "Blog Article Single"
    }
  ]
}
{% endschema %}
