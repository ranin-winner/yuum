{% render 'entry' with '@/styles/sections/trial-faq.scss' %}

<section class="trial-faq">
  <div class="trial-faq__container w-full max-w-[903px] mx-auto px-[16px] md:px-0">
    <h2 class="text-center text-2xl md:text-[32px] leading-tight mb-[40px] md:mb-[60px]">
      {{ section.settings.title | escape }}
    </h2>

    <div class="flex flex-col">
      {% for block in section.blocks %}
        {%- render 'accordion-item',
          q: block.settings.question,
          a: block.settings.answer,
          class: 'faq__items'
        -%}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Trial FAQ",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "FAQs"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam id felis et ipsum bibendum ultrices.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trial FAQ",
      "blocks": [
        { "type": "faq_item" },
        { "type": "faq_item" },
        { "type": "faq_item" }
      ]
    }
  ]
}
{% endschema %}
