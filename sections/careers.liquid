{% render 'entry' with '@/styles/sections/careers.scss' %}

<div class="careers-section">
  <div class="container">
    {% if section.settings.add_top_border %}
        <p class="border-t border-[#ADAEB0] pb-[40px]"></p>
    {% endif %}
    <div class="careers-section__content-wrapper">

        {%- if section.settings.small_heading != blank -%}
            <div class="">
                <p class="careers-small-heading">{{ section.settings.small_heading }}</p>
            </div>
        {%- endif -%}

        <div class="careers-section__content-inner">
            {%- if section.settings.heading != blank -%}
                <h2 class="careers-heading heading-3">{{ section.settings.heading }}</h2>
            {%- endif -%}
            {%- if section.settings.description != blank -%}
                <div class="careers-description">
                    {{ section.settings.description }}
                </div>
            {%- endif -%}
            
            {%- if section.settings.button_text_1 != blank -%}
                <a href="{{ section.settings.button_link_1 }}" class="careers-button mt-[32px] btn btn-light">
                {{ section.settings.button_text_1 }}
                </a>
            {%- endif -%}

            {%- if section.settings.additional_text != blank -%}
            <div class="careers-additional-text">
                {{ section.settings.additional_text }}
            </div>
            {%- endif -%}
            {% comment %} careers-content--equal {% endcomment %}
            <div class="careers-content 
                {% if section.settings.equal_columns %} careers-content--equal{% endif %}
                {% if section.settings.reverse_image_size %} careers-content--img-reverse {% endif %}
                {% if section.settings.align_images_bottom %} items-end {% endif %}  
                "
            >
            <!-- Team Image -->
            <div class="careers-team-block">
                    {%- if section.settings.team_image != blank -%}
                        <div class="careers-image-wrapper">
                            <img
                            src="{{ section.settings.team_image | img_url: '600x' }}"
                            alt="{{ section.settings.team_image.alt | escape }}"
                            loading="lazy"
                            class="careers-image"
                            >

                            {% if section.settings.add_bottom_border %}
                                <p class="border-b border-[#ADAEB0] pt-[24px] mb-[40px]"></p>
                            {% endif %}
                        </div>
                    {%- endif -%}

                    <!-- What we offer list -->
                    <div class="careers-offer-section">
                    {%- if section.settings.offer_heading != blank -%}
                        <h3 class="careers-offer-heading">{{ section.settings.offer_heading }}</h3>
                    {%- endif -%}

                    {%- if section.blocks.size > 0 -%}
                        <ul class="careers-offer-list">
                        {%- for block in section.blocks -%}
                            {%- if block.type == 'offer_item' -%}
                            <li class="careers-offer-item" {{ block.shopify_attributes }}>
                                <span class="careers-offer-number">{{ block.settings.number }}</span>
                                <span class="careers-offer-text">{{ block.settings.text }}</span>
                            </li>
                            {%- endif -%}
                        {%- endfor -%}
                        </ul>
                    {%- endif -%}
                </div>
            </div>

            <!-- Right Side: Single Person Image and CTA -->
            <div class="careers-cta-block">
                {%- if section.settings.person_image != blank -%}
                    <div class="careers-person-wrapper">
                        <img
                        src="{{ section.settings.person_image | img_url: '500x' }}"
                        alt="{{ section.settings.person_image.alt | escape }}"
                        loading="lazy"
                        class="careers-person-image"
                        >

                        {% if section.settings.add_bottom_border_person %}
                            <p class="border-b border-[#ADAEB0] pt-[24px] mb-[40px]"></p>
                        {% endif %}
                    </div>
                    
                {%- endif -%}

                    <div class="careers-cta-content">
                        {%- if section.settings.cta_heading != blank -%}
                            <h3 class="careers-cta-heading">{{ section.settings.cta_heading }}</h3>
                        {%- endif -%}

                        {%- if section.settings.cta_text != blank -%}
                            <p class="careers-cta-text">{{ section.settings.cta_text }}</p>
                        {%- endif -%}

                        {%- if section.settings.button_text != blank -%}
                            <a href="{{ section.settings.button_link }}" class="careers-button btn btn-light">
                            {{ section.settings.button_text }}
                            </a>
                        {%- endif -%}
                    </div>


            </div>
            </div>

            {%- if section.blocks.size > 0 -%}
                {%- for block in section.blocks -%}
                  {%- if block.type == 'quote_item' -%}
                    {%- assign bg_url = block.settings.quote_bg | image_url -%}
                    <div class="careers-quote" {{ block.shopify_attributes }} >

                        <img src="{{ bg_url }}" alt="img">
                        <div class="relative">
                            <div class="careers-quote--icon">
                                <svg width="120" height="91" viewBox="0 0 120 91" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M22.5434 91C7.51445 77.621 0 65.3954 0 54.3232C0 45.0963 4.39306 36.3308 13.1792 28.0266C21.9653 19.4917 33.2948 10.1495 47.1676 0L50.6358 5.19011C40.9249 13.4943 33.9884 20.2991 29.8266 25.6046C25.6647 30.91 23.5838 35.7541 23.5838 40.1369C23.5838 44.7503 25.4335 49.2484 29.1329 53.6312C33.0636 57.7833 38.1503 62.9734 44.3931 69.2015L22.5434 91ZM91.9075 91C76.8786 77.621 69.3642 65.3954 69.3642 54.3232C69.3642 45.0963 73.7572 36.3308 82.5434 28.0266C91.3295 19.4917 102.659 10.1495 116.532 0L120 5.19011C110.289 13.4943 103.353 20.2991 99.1908 25.6046C95.0289 30.91 92.948 35.7541 92.948 40.1369C92.948 44.7503 94.7977 49.2484 98.4971 53.6312C102.428 57.7833 107.514 62.9734 113.757 69.2015L91.9075 91Z" fill="#474747"/>
                                </svg>
                            </div>
                    
                            <div class="careers-quote--text">
                                {{ block.settings.quote_text }}
                                <p class="careers-quote--author">{{ block.settings.quote_author }}</p>
                            </div>
                        </div>
                    </div>
                  {%- endif -%}
                {%- endfor -%}
            {%- endif -%}

            {%- if section.blocks.size > 0 -%}
                {%- for block in section.blocks -%}
                    {%- if block.type == 'double_image_text' -%}
                        {% render 'double-image-text', block: block %}
                    {%- endif -%}
                {%- endfor -%}
            {%- endif -%}
        </div>
    </div>
  </div>
</div>

<style>
  .careers-section {
    background-color: {{ section.settings.background_color }};
  }
</style>

{% schema %}
{
  "name": "Careers Section",
  "settings": [
    {
        "type": "checkbox",
        "id": "add_top_border",
        "label": "Add botder top",
        "default": false
    },
    {
      "type": "text",
      "id": "small_heading",
      "label": "Small Heading",
      "default": "CAREERS AT YUUM"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Main Heading",
      "default": "As we grow, we're seeking curious, thoughtful, and driven individuals — from baristas to creatives, and operations to hospitality. People who care about their work and value authenticity."
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Our mission is building exceptional Japanese-inspired flavors to people through a modern, refined experience that feels both warm and bold.</p>"
    },
    {
      "type": "text",
      "id": "button_text_1",
      "label": "Button Text",
      "default": "VIEW VACANCIES"
    },
    {
      "type": "url",
      "id": "button_link_1",
      "label": "Button Link"
    },
    {
      "type": "richtext",
      "id": "additional_text",
      "label": "Additional Text",
      "default": "<p>We're not just building a café. We're creating a new flavor culture — one that's inclusive, expressive, and deliberate. At YUUM, your ideas matter. Your attention to detail matters. And your passion for doing things right (and beautifully) is what moves us forward.</p>"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#e5e5e5"
    },
    {
        "type": "checkbox",
        "id": "equal_columns",
        "label": "Make columns equal in width",
        "default": false
    },
    {
        "type": "checkbox",
        "id": "reverse_image_size",
        "label": "Reverse images size",
        "default": false
    },
    {
        "type": "checkbox",
        "id": "align_images_bottom",
        "label": "Images bottom alignment",
        "default": false
    },
    {
      "type": "image_picker",
      "id": "team_image",
      "label": "Team Image"
    },
    {
        "type": "checkbox",
        "id": "add_bottom_border",
        "label": "Add botder bottom",
        "default": false
    },
    {
      "type": "text",
      "id": "offer_heading",
      "label": "What We Offer Heading",
      "default": "What we offer:"
    },
    {
      "type": "image_picker",
      "id": "person_image",
      "label": "Person Image"
    },
    {
        "type": "checkbox",
        "id": "add_bottom_border_person",
        "label": "Add botder bottom",
        "default": false
    },
    {
      "type": "text",
      "id": "cta_heading",
      "label": "CTA Heading",
      "default": "Is this you?"
    },
    {
      "type": "textarea",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "If this sounds like you and you're ready to create something truly special, check out our open roles. You care about flavour and function. You care — about people, about craft, and about building something with intention."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "VIEW VACANCIES"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "offer_item",
      "name": "Offer Item",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "01"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "A supportive, purpose-driven team"
        }
      ]
    },
    {
      "type": "quote_item",
      "name": "Quote Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "quote_bg",
          "label": "Quote background"
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Quote icon"
        },
        {
          "type": "text",
          "id": "quote_text",
          "label": "Quote Text",
          "default": "YUUM is more than a dessert brand — it’s a crafted experience. Our mission is to craft unforgettable flavour experiences by blending curiosity, authenticity, and adventure — reimagining iconic cultural tastes through bold, sensory creations made right."
        },
        {
          "type": "text",
          "id": "quote_author",
          "label": "Quote author",
          "default": "— Full Name, Founder and CEO."
        }
      ]
    },
    {
        "type": "double_image_text",
        "name": "Double images + text",
        "settings": [
            { "type": "image_picker", "id": "image_main", "label": "Main image" },
            { "type": "image_picker", "id": "image_side", "label": "Side image" },
            { "type": "text", "id": "kicker", "label": "Kicker" },
            { "type": "text", "id": "title", "label": "Title" },
            { "type": "richtext", "id": "text", "label": "Text" },
            {
            "type": "range",
            "id": "radius",
            "label": "Image border radius",
            "min": 0, "max": 32, "step": 1, "unit": "px",
            "default": 16
            },
            {
            "type": "checkbox",
            "id": "reverse_on_desktop",
            "label": "Swap columns on desktop",
            "default": false
            },
            { "type": "text", "id": "custom_class", "label": "Custom CSS class" }
        ]
    }
  ],
  "presets": [
    {
      "name": "Careers Section",
      "blocks": [
        {
          "type": "offer_item",
          "settings": {
            "number": "01",
            "text": "A supportive, purpose-driven team"
          }
        },
        {
          "type": "offer_item",
          "settings": {
            "number": "02",
            "text": "Opportunities for growth and learning"
          }
        },
        {
          "type": "offer_item",
          "settings": {
            "number": "03",
            "text": "Creative freedom and responsibility"
          }
        },
        {
          "type": "offer_item",
          "settings": {
            "number": "04",
            "text": "Competitive pay and employee perks"
          }
        },
        {
          "type": "offer_item",
          "settings": {
            "number": "05",
            "text": "Beautifully designed spaces to work and create"
          }
        }
      ]
    }
  ]
}
{% endschema %}