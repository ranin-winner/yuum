<div class="b-hero-banner
    text-pos-x-{{ section.settings.text_position-x }}
    text-pos-y-{{ section.settings.text_position-y }}
    bg-image-pos-x-{{ section.settings.image_alignment_x }}
    bg-image-pos-y-{{ section.settings.image_alignment_y }}">

    <div class="b-hero-banner__content">
        {% if section.settings.title != blank %}
            <h1 class="b-hero-banner__title font-Gazpacho uppercase">{{ section.settings.title }}</h1>
        {% endif %}
        {% if section.settings.subtitle != blank %}
            <p class="b-hero-banner__text">{{ section.settings.subtitle }}</p>
        {% endif %}
        {% if section.settings.baner_button != blank %}
            <a href="{{ section.settings.baner_button_link }}" class="b-hero-banner_btn">{{ section.settings.baner_button }}</a>
        {% endif %}
    </div>
</div>

<style>
    .b-hero-banner {
        background-image: url({{ section.settings.image_bg | img_url: 'master' }});
        background-size: {{ section.settings.bg_size }};
        background-color: {{ section.settings.bg_color }};
        background-repeat: no-repeat;
        position: relative;
        width: 100%;
        display: flex;
        padding: {{ section.settings.padding_desktop }}px;
    }

    /* Image Position */
    .b-hero-banner.bg-image-pos-x-left {
        background-position-x: left;
    }

    .b-hero-banner.bg-image-pos-x-right {
        background-position-x: right;
    }

    .b-hero-banner.bg-image-pos-x-center {
        background-position-x: center;
    }

    .b-hero-banner.bg-image-pos-y-top {
        background-position-y: top;
    }

    .b-hero-banner.bg-image-pos-y-bottom {
        background-position-y: bottom;
    }

    .b-hero-banner.bg-image-pos-y-middle {
        background-position-y: center;
    }

    /* Text Position */
    .b-hero-banner.text-pos-x-center {
        justify-content: center;
    }

    .b-hero-banner.text-pos-x-left {
        justify-content: flex-start;
    }

    .b-hero-banner.text-pos-x-right {
        justify-content: flex-end;
    }

    .b-hero-banner.text-pos-y-center {
        align-items: center;
    }

    .b-hero-banner.text-pos-y-top {
        align-items: flex-start;
    }

    .b-hero-banner.text-pos-y-bottom {
        align-items: flex-end;
    }

    /* Main Styles */
    .b-hero-banner__content {
        text-align: {{ section.settings.text_alignment }};
        max-width: {{ section.settings.banner_text_width }}px;
        line-height: 1.5;
    }

    .b-hero-banner__title {
        font-size: {{ section.settings.title_font_size }}px;
        color: {{ section.settings.title_color }};
    }

    .b-hero-banner__text {
        font-size: {{ section.settings.subtitle_font_size }}px;
        color: {{ section.settings.text_color }};
        font-weight: 600;
    }

    .b-hero-banner_btn {
        display: inline-block;
        padding: 12px 26px 13px;
        background-color: #014ad3;
        color: #fff;
        font-size: 16px;
        line-height: 20px;
        text-decoration: none;
        text-transform: uppercase;
        margin-top: 6px;
        border-radius: 10px;
        min-width: 145px;
        font-weight: 800;
        transition: all 0.3s;
    }

    .b-hero-banner_btn:hover {
        background-color: #000;
    }

    /* Mobile Styles */
    @media (max-width: 767px) {
        .b-hero-banner {
            height: {{ section.settings.banner_height_mobile }}px;
            padding: {{ section.settings.padding_mobile }}px;
        }

        .b-hero-banner__title {
            font-size: {{ section.settings.title_font_size_mobile }}px;
        }

        .b-hero-banner__text {
            font-size: {{ section.settings.subtitle_font_size_mobile }}px;
        }

        .b-hero-banner__content {
            max-width: 100%;
            width: 100%;
            text-align: center;
        }
    }

    /* Desktop Styles */
    @media (min-width: 768px) {
        .b-hero-banner {
            height: {{ section.settings.banner_height_desktop }}px;
        }
    }
</style>

